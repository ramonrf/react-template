{
  "name": "ract-template",
  "version": "0.0.1",
  "description": "Template for React projects",
  "main": "index.js",
  "author": "Ramon Alejandro Reyes Fajardo",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/ramonrf/react-template.git"
  },
  "scripts": {
    "prebuild": "npm run clean-dist",
    "build": "webpack --config ./webpack/webpack.config.$NODE_ENV.js",
    "build-dev": "cross-env NODE_ENV=development npm run build",
    "build-prd": "cross-env NODE_ENV=production npm run build",
    "build-dev:analyze": "cross-env ANALYZE_BUNDLE=true npm run build-dev",
    "build-prd:analyze": "cross-env ANALYZE_BUNDLE=true npm run build-prd",
    "webpack-dev-server": "cross-env NODE_ENV=development webpack-dev-server --config ./webpack/webpack.config.development.js",
    "start": "nodemon --watch webpack --exec \"npm run webpack-dev-server\"",
    "server": "npm run build-prd && node ./src/server/server.js",
    "server:watch": "nodemon --watch src --watch webpack --ext js,jsx,scss,html,ico,svg,jpg --exec \"npm run server\"",
    "lint": "stylelint \"src/**/*.scss\" & eslint src --ext .jsx,.js",
    "test-no-lint": "cross-env NODE_ENV=test nyc mocha --opts mocha.opts \"src/**/*.test.{js,jsx}\"",
    "posttest-no-lint": "npm run remove-nyc_output",
    "test": "npm run lint && npm run test-no-lint",
    "posttest": "npm run remove-nyc_output",
    "clean-dist": "shx rm -rf dist",
    "remove-nyc_output": "shx rm -rf .nyc_output",
    "webpack-build-with-stats": "webpack --config ./webpack/webpack.config.$NODE_ENV.js --profile --json > stats.json",
    "webpack-create-stats": "npm run clean-dist && cross-env NODE_ENV=production npm run webpack-build-with-stats",
    "precommit": "npm run lint",
    "prepush": "npm test"
  },
  "nyc": {
    "check-coverage": false,
    "statements": 10,
    "branches": 10,
    "functions": 10,
    "lines": 10,
    "sourceMap": false,
    "instrument": false,
    "cache": true,
    "include": [
      "src/**/*.js{,x}"
    ],
    "reporter": [
      "html",
      "text-summary"
    ]
  },
  "browserslist": [
    ">0.25%",
    "not op_mini all"
  ],
  "dependencies": {
    "bootstrap": "^4.1.0",
    "classnames": "^2.2.5",
    "compression": "^1.7.2",
    "connect-history-api-fallback": "^1.5.0",
    "express": "^4.16.3",
    "morgan": "^1.9.0",
    "prop-types": "^15.6.1",
    "react": "^16.3.1",
    "react-dom": "^16.3.1",
    "react-loadable": "^5.3.1",
    "react-router-dom": "^4.3.1",
    "reactstrap": "^5.0.0-beta.3",
    "rotating-file-stream": "^1.3.6"
  },
  "devDependencies": {
    "autoprefixer": "^8.2.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.5",
    "babel-loader": "^7.1.4",
    "babel-plugin-istanbul": "^4.1.6",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "chai": "^4.1.2",
    "cross-env": "^5.1.4",
    "css-loader": "^0.28.11",
    "duplicate-package-checker-webpack-plugin": "^3.0.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.9.1",
    "fast-sass-loader": "^1.4.5",
    "file-loader": "^1.1.11",
    "html-webpack-exclude-assets-plugin": "0.0.7",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^0.14.3",
    "inline-manifest-webpack-plugin": "^4.0.0",
    "mini-css-extract-plugin": "^0.4.0",
    "mocha": "^5.1.0",
    "node-sass": "^4.8.3",
    "nodemon": "^1.17.4",
    "nyc": "^11.6.0",
    "postcss-loader": "^2.1.4",
    "remove-source-webpack-plugin": "^0.1.0",
    "shx": "^0.2.2",
    "style-loader": "^0.20.3",
    "stylelint": "^9.2.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-order": "^0.8.1",
    "url-loader": "^1.0.1",
    "webpack": "^4.6.0",
    "webpack-bundle-analyzer": "^2.11.2",
    "webpack-cli": "^2.0.15",
    "webpack-dev-server": "^3.1.3",
    "webpack-merge": "^4.1.2"
  }
}
